/* pages/shopcar/shopcar.wxss */


.shopcar {
  display: flex;
  position: relative;
  padding: 30rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #25B195;
  text-align: center;
  font-size: small;
}

.checkbox {
  margin: auto 0;
  margin-right: 10rpx;
}

.shopcar image {
  width: 150rpx;
}

.shopcar .info {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10rpx;
}

.shopcar .price {
  margin-top: 10rpx;
  color: rgb(220, 0, 0);
  font-weight: 700;
}

.shopcar .num {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  margin: auto 0;
  text-align: right;
}

.shopcar .num view {
  background-color: #efefef;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #25B195;
}

.shopcar .num view:nth-child(2) {
  width: 70rpx;
  text-align: center;
  padding: 0;
  border-left: 1px solid #fff;
  border-right: 1px solid #fff;
  color: #666;
}

.shopcar .delete {
  position: absolute;
  top: 6rpx;
  right: -200rpx;
  transform: translateY(50%);
  height: 100rpx;
  line-height: 100rpx;
  width: 150rpx;
  background-color: rgb(214, 70, 70);
  border-radius: 20rpx;
  color: #fff;
  font-size: medium;
}

.total {
  position: absolute;
  bottom: 0;
  display: flex;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
}

.total .checkbox {
  margin-left: 30rpx;
}

.total .sum {
  margin-left: 30rpx;
}

.total .totalPrice {
  flex: 1;
  color: rgb(220, 0, 0);
  font-weight: 700;
  font-size: large;
}

.total .button {
  height: 80rpx;
  line-height: 80rpx;
  margin: auto 0;
  margin-right: 30rpx;
  padding: 0 80rpx;
  background-color: #25B195;
  border-radius: 20rpx;
  color: #fff;
}