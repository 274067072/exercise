/* pages/list/list.wxss */
.list-container{
  display: flex;
  flex-wrap: wrap;
}
.list-container .goods{
  box-sizing: border-box;
  width: 50%;
  padding:0 30rpx;
  margin: 30rpx 0;
}
.list-container .goods image{
  width: 100%;
}
.sort-list{
  display: flex;
  position: sticky;
  top: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #25B195;
}
.sort-list view{
  flex:1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  vertical-align: sub;
}
.sort-list view:first-child{
  border-right: 1rpx solid #25B195;
}